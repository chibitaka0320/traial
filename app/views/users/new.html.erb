<div class="main users-new">
  <div class="container">
    <div class="form-all">
      <div class="form-head">
        <h3>ひまチャットに登録</h3>
      </div>
      <div class="login-body">
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
        <%= form_tag("/users/create") do %>
        <div class="form-body">
          <p>
            ユーザー名
            <input class="box" name="name">
          </p>
          <p>パスワード
            <input class="box" name="password">
          </p>
          <p>
            <input class="submit" type="submit" value="新規登録">
          </p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
