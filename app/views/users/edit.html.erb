<div class="main user-edit">
  <div class="container">
    <div class="form-head">
      <h3>アカウント情報を編集</h3>
    </div>
    <div class="login-body acountedit">
      <div class="form-body-head">
        <div class="form-body-left">
          <%= link_to("戻る","/users/#{@user.id}")%>
        </div>
        <div class="form-body-right">
          <%= link_to("アカウント消去","/users/#{@user.id}/destroy",{method: "post"}) %>
        </div>
      </div>
      <%= form_tag("/users/#{@user.id}/update",{multipart: true}) do %>
      <div class="form-body">
        <p>
          <img class="post-icon" src="<%= "/user_images/#{@user.image_name}" %>">
        </p>
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <p>
          ユーザー名
          <input class="box" name="name" value="<%= @user.name %>">
        </p>
        <p>
          画像
          <input type="file" name="image">
        </p>
        <p>
          パスワード
          <input class="box" name="password" value="<%= @user.password %>">
        </p>
        <p>
          <input class="submit" type="submit" value="確定">
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>
